<!-- In listings FOLDER WE GONE STORE listings RELATED DATA (LIKE USER COLLECTIONS) -->
<% layout("/layouts/boilerplate") %> <!-- ðŸ§  This tells EJS to use boilerplate.ejs as the layout -->

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin-right: 1.3rem;
            margin-top: 2rem;
            opacity: 0.6;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        /* Check box (display taxes) */
        .tax-toggle {
           border: 1px solid black;
           border-radius: 1rem;
           height: 2.5rem;
           padding: 1rem;
           margin-top: 0.6rem;
           margin-left: 2rem;
           display: flex;
           align-items: center;
        }

        .tax-info {
            display: none;
        }
    </style>
    <!-- ------------------------------------Below NavBar Images----------------------------------------------------->
    <div id="filters">
        <!-- Adding icons -->
        <div class="filter">
            <div> <i class="fa-duotone fa-solid fa-fire"></i> </div>
            <p>Trending</p>
        </div>

        <div class="filter">
            <div><i class="fa-duotone fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>

        <div class="filter">
            <div><i class="fa-duotone fa-solid fa-city"></i> </div>
            <p>Iconic Cities</p>
        </div>

        <div class="filter">
            <div><i class="fa-duotone fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>

        <div class="filter">
            <div><i class="fa-duotone fa-solid fa-mountain-city"></i></div>
            <p>Mountain Cities</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Snow-falls</p>
        </div>

        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Arctic</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>

        <!-- Adding switches -->
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Dispaly total after taxes</label>
            </div>
        </div>

    </div>
    <!-------------------------------------------------------------------------------------------------------- -->
    <!-- NOW THE DATA IN allListings ARE GONE STORE IN listing -->
    <div class="row  row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3 mt-3 mb-3">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">

                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listingimage"
                        style="height: 20rem;" />
                    <!--  HERE YOU CAN GIVE CONTENT ON IMAGE BY USING THIS CLASS  class="card-img-overlay" -->
                    <div class="card-img-overlay"></div>

                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=listing.title%>
                            </b><br />
                            &#8377;<%=listing.price.toLocaleString("en-IN")%> for 2 nights
                                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <%}%>
    </div>

